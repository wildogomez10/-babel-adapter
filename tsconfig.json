{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "rootDir": "",
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "dist"
  ]
}